<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id='gotagota_departamento_action' model='ir.actions.act_window'>
        <field name="name">Departamentos</field>
        <field name="res_model">gotagota.departamento</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Crear un departamento
          </p>
        </field>
    </record>

    <record id='gotagota_ciudad_action' model='ir.actions.act_window'>
        <field name="name">Ciudades</field>
        <field name="res_model">gotagota.ciudad</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Crear una ciudad
          </p>
        </field>
    </record>


</odoo>